<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CompressVideo" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.CompressVideo</item>
    </style>

    <style name="QualityCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="QualityNotSelectedCardView" parent="QualityCardView">
        <item name="android:backgroundTint">@color/qualityNotSelected</item>
    </style>

    <style name="QualitySelectedCardView" parent="QualityCardView">
        <item name="android:backgroundTint">@color/qualitySelected</item>
    </style>

</resources>